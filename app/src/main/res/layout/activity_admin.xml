<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="добро пожаловать, администратор!"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />

    <!-- список слов -->
    <ListView
        android:id="@+id/word_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- поля для добавления нового слова -->
    <EditText
        android:id="@+id/input_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="введите слово" />

    <EditText
        android:id="@+id/input_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="введите описание" />

    <!-- кнопка для добавления слова -->
    <Button
        android:id="@+id/add_word_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#596F62"
        android:text="добавить слово" />

</LinearLayout>
